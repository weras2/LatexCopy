{

  "manifest_version": 2,
  "name": "LatexCopy",
  "version": "1.0",

  "description": "Copies Latex formula to your clipboard.",

  "icons":{
    "48": "integral.png"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["latexCopy.js"]
  }],

  "background":{
    "scripts":["latexCopyBackground.js"]
  },
  
  "permissions": [
    "menus",
    "activeTab",
    "clipboardRead",
    "clipboardWrite"
  ]

}